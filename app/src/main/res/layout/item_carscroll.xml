<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="146dp"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:background="@color/white"
              android:layout_marginRight="16dp"
              android:paddingBottom="12.5dp"
        >

    
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitEnd"
            android:src="@drawable/car"
            />


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/cardescribe"
            android:paddingHorizontal="15.5dp"
            android:textColor="@color/black3"
            android:textSize="13sp"
            />


    <TextView
            android:id="@+id/tv_configdetaill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/configdetail"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginHorizontal="11.5dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            android:background="@drawable/bg_configdetail"
            />









</LinearLayout>