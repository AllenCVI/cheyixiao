<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        >

        <TextView
            android:id="@+id/sure_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12_size"
            android:textColor="@color/glodF5"
            android:text="@string/sure_money"
            android:background="@drawable/glod_f5_shape"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14_size"
            android:textColor="@color/black9"
            android:text="@string/time"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16_size"
                android:textColor="@color/black3"
                android:text="@string/time"
                android:gravity="center"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14_size"
                android:textColor="@color/black6"
                android:text="@string/time"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/maket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14_size"
                android:textColor="@color/black6"
                android:text="@string/time"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/but_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_10_size"
                android:textColor="@color/redD5"
                android:text="@string/buy_status"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_2_d5_shape"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_8"
                />


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/line_view_color"/>

        <LinearLayout
            android:id="@+id/right_rela"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_16_size"
                    android:textColor="@color/black9"
                    android:text="担保定金"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14_size"
                    android:textColor="@color/redD5"
                    android:text="$2000"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_16_size"
                    android:textColor="@color/black9"
                    android:text="担保定金"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14_size"
                    android:textColor="@color/redD5"
                    android:text="$2000"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8">

        <TextView
            android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/mine"
            android:background="@drawable/red_black9_kuang_select"
            android:gravity="center"
            android:textColor="@color/red_black9_selector"
            android:clickable="true"/>

        <TextView
            android:id="@+id/cacle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12_size"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/cacle_order"
            android:background="@drawable/red_black9_kuang_select"
            android:gravity="center"
            android:textColor="@color/red_black9_selector"
            android:layout_toLeftOf="@+id/pay_text"
            android:clickable="true"
            />

    </RelativeLayout>





</LinearLayout>