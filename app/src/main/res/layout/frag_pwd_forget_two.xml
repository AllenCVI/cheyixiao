<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="28dp"
        android:paddingRight="28dp">

        <FrameLayout
            android:layout_width="33dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="17.5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account" />
        </FrameLayout>

        <EditText
            android:id="@+id/input_pwd"
            style="@style/registerInputStyle"
            android:hint="@string/please_input_pwd"
            android:inputType="textPassword" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/greyea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="28dp"
        android:paddingRight="28dp">

        <FrameLayout
            android:layout_width="33dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_passwd" />
        </FrameLayout>

        <EditText
            android:id="@+id/input_pwd_repeat"
            style="@style/registerInputStyle"
            android:hint="@string/please_input_pwd_repeat"
            android:inputType="textPassword" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/greyea" />

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="29dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_status_bg"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>