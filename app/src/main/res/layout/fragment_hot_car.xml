<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/icon_current_hot_car"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_gravity="center_vertical"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14_size"
            android:textColor="@color/black2"
            android:layout_below="@+id/bar"
            android:text="@string/current_hot_car"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"

            />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_above="@+id/add_other_hot_car"
        >

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/add_other_hot_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16_size"
        android:background="@color/redD5"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_8"
        android:text="@string/add_other_hot_car"
        android:gravity="center"
        android:clickable="true"
        />

</RelativeLayout>