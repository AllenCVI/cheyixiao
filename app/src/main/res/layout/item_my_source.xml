<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingTop="13dp"
    android:paddingRight="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.autoforce.cheyixiao.common.view.bold.BoldTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="宝骏730 2017款 1.8T 尊享型7座111"
            android:textColor="@color/black3"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="16.8万"
            android:textColor="@color/redD5"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_procedure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="银色/灰色"
            android:textColor="@color/black6"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/guide_price_format"
            android:textColor="@color/black9"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_one"
            style="@style/carSourceTagStyle"
            android:layout_marginRight="5dp"
            android:text="国产现车" />

        <TextView
            android:id="@+id/tv_two"
            style="@style/carSourceTagStyle"
            android:layout_marginRight="5dp"
            android:text="北极光紫/黑" />

        <TextView
            android:id="@+id/tv_three"
            style="@style/carSourceTagStyle"
            android:layout_marginRight="5dp"
            android:text="车在北京市" />

        <TextView
            android:id="@+id/tv_four"
            style="@style/carSourceTagStyle"
            android:text="售全国" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="2018.11.22.15:32"
            android:textColor="@color/black9"
            android:textSize="11sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13dp"
        android:background="@color/line_view_color" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_edit"
            android:drawablePadding="7dp"
            android:text="@string/edit"
            android:textColor="@color/black6"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_off_market"
            android:drawablePadding="7dp"
            android:text="@string/off_market"
            android:textColor="@color/black6"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_edit"
            android:drawablePadding="7dp"
            android:text="@string/delete"
            android:textColor="@color/black6"
            android:textSize="13sp" />

    </RelativeLayout>


</LinearLayout>