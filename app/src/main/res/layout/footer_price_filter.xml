<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="16dp">


        <com.autoforce.cheyixiao.common.view.bold.BoldTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/custom_filter_price"
            android:textColor="@color/black26"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/et_lower"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:background="@drawable/bg_rectround_line_grey97"
            android:lines="1" />

        <com.autoforce.cheyixiao.common.view.bold.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/ten_thousands"
            android:textColor="@color/black26"
            android:textSize="@dimen/text_14_size" />


        <com.autoforce.cheyixiao.common.view.bold.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/to"
            android:textColor="@color/black26"
            android:textSize="@dimen/text_14_size" />

        <EditText
            android:id="@+id/et_upper"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:background="@drawable/bg_rectround_line_grey97"
            android:lines="1" />

        <com.autoforce.cheyixiao.common.view.bold.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/ten_thousands"
            android:textColor="@color/black26"
            android:textSize="@dimen/text_14_size" />

    </LinearLayout>

