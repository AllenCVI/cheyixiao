<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_all_rount"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

    <TextView
            android:id="@+id/mine_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_account"
            android:textColor="@color/black3"
            android:gravity="center"
            android:textSize="@dimen/text_14_size"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/my_account"
            android:drawablePadding="@dimen/dp_5"
    />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_line"
            android:background="@color/line_view_color">

    </ImageView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/approve_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_12_size"
                android:textColor="@color/black6"
                android:text="@string/approve_info"
                android:drawableTop="@drawable/icon_approve_info"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:clickable="true"
                />

        <TextView
                android:id="@+id/my_integral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_12_size"
                android:textColor="@color/black6"
                android:text="@string/my_integral"
                android:drawableTop="@drawable/icon_my_integral"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:clickable="true"
        />
        <TextView
                android:id="@+id/order_car_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_12_size"
                android:textColor="@color/black6"
                android:text="@string/order_car_source"
                android:drawableTop="@drawable/icon_car_source_order"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:clickable="true"
        />
        <TextView
                android:id="@+id/blank_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/text_12_size"
                android:textColor="@color/black6"
                android:text="@string/blank_card"
                android:drawableTop="@drawable/icon_blank_card"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:clickable="true"
                android:visibility="gone"
        />


    </LinearLayout>




</LinearLayout>