<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingTop="12dp"
    android:paddingRight="@dimen/dp_20"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.autoforce.cheyixiao.common.view.bold.BoldTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:text="宝骏730 2017款 1.8T 尊享型7座111"
            android:textColor="@color/black3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寻车中"
            android:textColor="@color/redD5"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_color"
            style="@style/searchCarTagStyle"
            android:text="黑色/红色" />

        <TextView
            android:id="@+id/tv_city"
            style="@style/searchCarTagStyle"
            android:layout_marginLeft="5dp"
            android:text="北京市上牌" />

        <TextView
            android:id="@+id/tv_spec"
            style="@style/searchCarTagStyle"
            android:layout_marginLeft="5dp"
            android:text="国产现车" />

        <TextView
            android:id="@+id/tv_status_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:gravity="right"
            android:text="@string/quote_numbers_format"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fixed"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/order_price_format"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_expect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expect_price_format"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2018.11.22.15:32"
            android:textColor="@color/black9"
            android:textSize="11sp" />

    </LinearLayout>


</LinearLayout>