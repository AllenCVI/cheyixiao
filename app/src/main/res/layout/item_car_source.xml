<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingTop="13dp"
    android:paddingRight="18dp"
    android:paddingBottom="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.autoforce.cheyixiao.common.view.bold.BoldTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="宝骏730 2017款 1.8T 尊享型7座111"
            android:textColor="@color/black3"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="16.8万"
            android:textColor="@color/redD5"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_procedure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="银色/灰色"
            android:textColor="@color/black6"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/guide_price_format"
            android:textColor="@color/black9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="111"
            android:textColor="@color/grey2a"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_one"
            style="@style/carSourceTagStyle"
            android:layout_marginRight="5dp"
            android:text="国产现车" />

        <TextView
            android:id="@+id/tv_two"
            style="@style/carSourceTagStyle"
            android:layout_marginRight="5dp"
            android:text="北极光紫/黑" />

        <TextView
            android:id="@+id/tv_three"
            style="@style/carSourceTagStyle"
            android:layout_marginRight="5dp"
            android:text="车在北京市" />

        <TextView
            android:id="@+id/tv_four"
            style="@style/carSourceTagStyle"
            android:text="售全国" />

    </LinearLayout>


</LinearLayout>